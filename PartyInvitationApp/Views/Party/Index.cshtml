@model IEnumerable<Party>

@{
    ViewData["Title"] = "All Parties";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.Description</td>
                <td>@party.EventDate.ToShortDateString()</td>
                <td>@party.Location</td>
                <td>
                    <a href="@Url.Action("Details", "Party", new { id = party.PartyId })" class="btn btn-primary">View</a>
                    <a href="@Url.Action("Edit", "Party", new { id = party.PartyId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Party", new { id = party.PartyId })" class="btn btn-danger btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Party")" class="btn btn-success">Create New Party</a>

@section Scripts {
    <script src="~/js/site.js"></script>
}
