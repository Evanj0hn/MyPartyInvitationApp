@model IEnumerable<Party>

<h2>All Parties</h2>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var party in Model)
        {
            <tr>
                <td>@party.Description</td>
                <td>@party.EventDate.ToShortDateString()</td>
                <td>@party.Location</td>
                <td>
                    <a href="@Url.Action("Details", "Party", new { id = party.PartyId })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Party")">Create New Party</a>
