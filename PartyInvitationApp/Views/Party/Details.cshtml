@model Party

<h2>Party Details</h2>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
<p><strong>Location:</strong> @Model.Location</p>

<!-- "Send Invitations" Button -->
<a href="@Url.Action("SendInvitations", "Party", new { id = Model.PartyId })" class="btn btn-info">Send Invitations</a>

<h3>Invitations</h3>
<table class="table">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Email</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invitation in Model.Invitations)
        {
            <tr>
                <td>@invitation.GuestName</td>
                <td>@invitation.GuestEmail</td>
                <td>@invitation.Status</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Party")">Back to Parties</a>
